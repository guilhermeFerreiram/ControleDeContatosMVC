@model RedefinirSenha

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir a senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Login</label>
        <input type="text" class="form-control" id="login" asp-for="UserLogin">
        @Html.ValidationMessageFor(x => x.UserLogin);
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" id="email" asp-for="Email">
        @Html.ValidationMessageFor(x => x.Email);
    </div>

    <button type="submit" class="btn btn-primary">Redefinir Senha</button>
    <a class="btn btn-secondary" asp-controller="Login" asp-action="Index">Voltar</a>
</form>
